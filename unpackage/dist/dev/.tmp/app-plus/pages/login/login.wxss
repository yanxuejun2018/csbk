.icon-guanbi {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #332F0A;
  z-index: 100;
}
.other-login-title:before, .other-login-title:after {
  content: "";
  position: absolute;
  background: #BBBBBB;
  height: 1rpx;
  width: 100rpx;
  top: 50%;
}
.other-login-title:before {
  left: 25%;
}
.other-login-title:after {
  right: 25%;
}
.login-input-box {
  position: relative;
}
