}
.login-font-color {
  color: #BBBBBB;
}
.login-padding {
  padding: 20rpx 0;
}
.loginhead {
  width: 100%;
}
.other-login-title {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
